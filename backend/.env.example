# Configurações do Banco de Dados
MONGODB_URI=mongodb://localhost:27017/lovable-ads-manager
MONGODB_TEST_URI=mongodb://localhost:27017/lovable-ads-manager-test

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production
JWT_REFRESH_EXPIRE=7d

# Configurações do Servidor
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Configurações de CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Configurações de Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@lovable-ads-manager.com
FROM_NAME=Lovable Ads Manager

# Configurações do Gateway de Pagamento
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PagSeguro (alternativa)
PAGSEGURO_EMAIL=your-pagseguro-email@example.com
PAGSEGURO_TOKEN=your-pagseguro-token
PAGSEGURO_SANDBOX=true

# Mercado Pago (alternativa)
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# Configurações de Upload
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf

# Configurações de Cache (Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de APIs Externas
# Google Ads API
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token

# Meta Ads API
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

# Google Analytics API
GOOGLE_ANALYTICS_CLIENT_ID=your-ga-client-id
GOOGLE_ANALYTICS_CLIENT_SECRET=your-ga-client-secret

# Configurações de Webhook
WEBHOOK_SECRET=your-webhook-secret-key

# Configurações de Cron Jobs
ENABLE_CRON_JOBS=true
METRICS_SYNC_INTERVAL=0 */15 * * * *
AUTOMATION_CHECK_INTERVAL=0 */5 * * * *

# Configurações de Notificações
# WhatsApp (via API)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-api-token

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Configurações de IA/ML
OPENAI_API_KEY=your-openai-api-key
AI_INSIGHTS_ENABLED=true

# Configurações de Segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Configurações de Monitoramento
SENTRY_DSN=your-sentry-dsn
ENABLE_MONITORING=false

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=0 2 * * *
BACKUP_RETENTION_DAYS=30

# URL Base da Aplicação
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

